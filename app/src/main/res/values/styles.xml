<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="AdkintunTheme" parent="AdkintunThemeBase">
    </style>

    <!-- Base application theme. -->
    <style name="AdkintunThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AdkintunFullScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="@android:style/Widget.SeekBar">
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
    </style>

    <style name="floatingBoxLabel">
        <item name="android:layout_marginTop">@dimen/separation_little</item>
        <item name="android:paddingLeft">@dimen/separation_little</item>
        <item name="android:paddingRight">@dimen/separation_little</item>
        <item name="android:paddingBottom">@dimen/separation_min</item>
        <item name="android:paddingTop">@dimen/separation_min</item>
        <item name="android:background">@color/colorSoftCard</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="floatingBox">
        <item name="android:layout_margin">@dimen/separation_min</item>
        <item name="android:paddingBottom">@dimen/separation_min</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Tutorials Themes -->
    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/tutorial_background</item>
        <item name="sv_showcaseColor">@color/tutorial_action</item>
        <item name="sv_buttonText">@string/tutorial_close</item>
        <item name="sv_titleTextAppearance">@style/TutorialTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/TutorialBodyStyle</item>
    </style>

    <style name="TutorialTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">@color/tutorial_title</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TutorialBodyStyle" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/tutorial_body</item>
    </style>

</resources>
