<resources>

    <style name="AdkintunTheme" parent="AdkintunThemeBase">
    </style>

    <!-- Base application theme. -->
    <style name="AdkintunThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AdkintunFullScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="@android:style/Widget.SeekBar">
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
    </style>

    <style name="floatingBoxLabel">
        <item name="android:layout_marginTop">@dimen/separation_little</item>
        <item name="android:paddingLeft">@dimen/separation_little</item>
        <item name="android:paddingRight">@dimen/separation_little</item>
        <item name="android:paddingBottom">@dimen/separation_min</item>
        <item name="android:paddingTop">@dimen/separation_min</item>
        <item name="android:background">@color/colorSoftCard</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="floatingBox">
        <item name="android:layout_margin">@dimen/separation_little</item>
        <item name="android:paddingBottom">@dimen/separation_little</item>
        <item name="android:background">@color/doughnut_no_info</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
