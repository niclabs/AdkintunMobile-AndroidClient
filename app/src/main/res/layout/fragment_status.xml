<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    tools:context="cl.niclabs.adkintunmobile.views.status.StatusFragment">

    <RelativeLayout
        android:id="@+id/loading_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorLoadingPane">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleLarge" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Información del estado actual de tu teléfono, y del consumo de datos móviles del día"
            android:id="@+id/textView2"
            android:textColor="@color/cardview_light_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/floatingBox">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_signal_cellular_bar_white"
                android:gravity="center"
                android:text="Tu Señal"
                style="@style/labelsFloatingBox"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/abc_text_size_medium_material">

                <TextView
                    android:id="@+id/tv_signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Display1"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tv_signal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>




        <!-- Segunda fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.00"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:orientation="vertical"
                style="@style/floatingBox">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_sim_card_white"
                    android:gravity="center"
                    style="@style/labelsFloatingBox"
                    android:text="Tu SIM"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material">

                    <ImageView
                        android:id="@+id/iv_sim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/tv_sim"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:orientation="vertical"
                style="@style/floatingBox">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_settings_input_antenna_white"
                    android:gravity="center"
                    style="@style/labelsFloatingBox"
                    android:text="Tu Red"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material">

                    <ImageView
                        android:id="@+id/iv_antenna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/tv_antenna"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




        <!-- Tercera Fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/floatingBox">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_data_usage_white"
                android:gravity="center"
                style="@style/labelsFloatingBox"
                android:text="Tu consumo de datos móviles"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal">

                    <pl.pawelkleczkowski.customgauge.CustomGauge
                        android:id="@+id/gauge1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:padding="10dp"
                        gauge:pointEndColor="@color/doughnut_mobile"
                        gauge:pointStartColor="@color/doughnut_mobile"
                        gauge:startAngel="135"
                        gauge:startValue="0"
                        gauge:endValue="100"
                        gauge:strokeCap="ROUND"
                        gauge:strokeWidth="10dp"
                        gauge:sweepAngel="270" />

                    <TextView
                        android:id="@+id/tvgauge1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/gauge1"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="48dp"
                        android:text="0"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivgauge1"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_symbology_traffic_download"
                        android:layout_alignBottom="@+id/gauge1"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal">

                    <pl.pawelkleczkowski.customgauge.CustomGauge
                        android:id="@+id/gauge2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:padding="10dp"
                        gauge:pointEndColor="@color/doughnut_wifi"
                        gauge:pointStartColor="@color/doughnut_wifi"
                        gauge:startAngel="135"
                        gauge:startValue="0"
                        gauge:endValue="100"
                        gauge:strokeCap="ROUND"
                        gauge:strokeWidth="10dp"
                        gauge:sweepAngel="270" />

                    <TextView
                        android:id="@+id/tvgauge2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/gauge2"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="48dp"
                        android:text="0"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivgauge2"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@mipmap/ic_symbology_traffic_upload"
                        android:layout_alignBottom="@+id/gauge2"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </TableRow>
            </TableLayout>


            <ProgressBar
                style="@style/CustomProgressBarHorizontal"
                android:layout_marginBottom="@dimen/separation_little"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pb_mobile_data_consumption"
                android:progress="41"
                android:max="100"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_mobile_data_consumption_"
                android:text="Periodo: "
                android:textSize="10sp"
                android:visibility="visible"
                android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</FrameLayout>
