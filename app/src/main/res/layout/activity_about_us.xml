<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.niclabs.adkintunmobile.views.aboutus.AboutUsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/floatingBox"
            android:padding="@dimen/separation_little">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/aboutus_adk_logo_height"
                android:id="@+id/imageView"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_margin="@dimen/abc_dialog_padding_top_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/view_aboutus_about_app"
                android:id="@+id/textView2"
                android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitar Sitio Web"
                android:id="@+id/bt_website_homepage"
                android:drawableLeft="@drawable/ic_web_white"
                android:onClick="openHomeWebPage"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/text_info_data_quota"
                android:paddingRight="@dimen/text_info_data_quota"
                android:background="@color/colorSoftCard" />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PolÃ­tica de Privacidad"
                android:id="@+id/bt_privacy_policy"
                android:drawableLeft="@drawable/ic_web_white"
                android:onClick="openPrivacyPolicy"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/text_info_data_quota"
                android:paddingRight="@dimen/text_info_data_quota"
                android:background="@color/colorSoftCard"
                android:layout_marginTop="@dimen/button_margin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/button_margin"
                android:background="@color/doughnut_no_info"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/aboutus_institutions_logo_height"
                    android:src="@mipmap/niclabs_logo"
                    android:paddingTop="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/aboutus_institutions_logo_height"
                    android:src="@mipmap/uchile_logo" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
