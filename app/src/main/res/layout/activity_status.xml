<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@mipmap/background"
    tools:context="cl.niclabs.adkintunmobile.views.status.StatusActivity">

    <!-- Toolbar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin" />


    </android.support.design.widget.AppBarLayout>

    <!-- Contenido -->
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:gauge="http://schemas.android.com/apk/res-auto"
            tools:context="cl.niclabs.adkintunmobile.views.status.StatusFragment">

            <RelativeLayout
                android:id="@+id/loading_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorLoadingPane"
                android:visibility="visible">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    style="?android:attr/progressBarStyleLarge" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- Primera Fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/floatingBox">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_signal_cellular_bar_white"
                            android:gravity="center"
                            android:text="@string/view_status_your_signal"
                            style="@style/floatingBoxLabel"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/separation_min">

                            <TextView
                                android:id="@+id/tv_signal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Display1"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/abc_action_bar_subtitle_top_margin_material" />

                            <TextView
                                android:id="@+id/tv_signal2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Headline"
                                android:layout_gravity="center" />
                        </LinearLayout>

                    </LinearLayout>


                    <!-- Segunda fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.00"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:orientation="vertical"
                            style="@style/floatingBox">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_sim_card_white"
                                android:gravity="center"
                                style="@style/floatingBoxLabel"
                                android:text="@string/view_status_your_SIM"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/separation_min">

                                <ImageView
                                    android:id="@+id/iv_sim"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/separation_little"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/tv_sim"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.50"
                            android:orientation="vertical"
                            style="@style/floatingBox">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_settings_input_antenna_white"
                                android:gravity="center"
                                style="@style/floatingBoxLabel"
                                android:text="@string/view_status_your_network"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/separation_min">

                                <ImageView
                                    android:id="@+id/iv_antenna"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/separation_little"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/tv_antenna"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <!-- Tercera Fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/floatingBox">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_data_usage_white"
                            android:gravity="center"
                            style="@style/floatingBoxLabel"
                            android:text="@string/view_status_your_daily_data_usage"/>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="0,1,2"
                            android:layout_marginTop="@dimen/separation_little">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="0"
                                    android:layout_gravity="center_horizontal">

                                    <pl.pawelkleczkowski.customgauge.CustomGauge
                                        android:id="@+id/gauge1"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp"
                                        android:padding="10dp"
                                        gauge:pointEndColor="@color/doughnut_mobile"
                                        gauge:pointStartColor="@color/doughnut_mobile"
                                        gauge:startAngel="135"
                                        gauge:startValue="0"
                                        gauge:endValue="100"
                                        gauge:strokeCap="ROUND"
                                        gauge:strokeWidth="10dp"
                                        gauge:sweepAngel="270" />

                                    <TextView
                                        android:id="@+id/tvgauge1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/gauge1"
                                        android:layout_centerInParent="true"
                                        android:layout_marginBottom="48dp"
                                        android:text="0"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/ivgauge1"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:src="@mipmap/ic_symbology_traffic_download"
                                        android:layout_alignBottom="@+id/gauge1"
                                        android:layout_marginBottom="20dp"
                                        android:layout_centerHorizontal="true" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:layout_gravity="center_horizontal">

                                    <pl.pawelkleczkowski.customgauge.CustomGauge
                                        android:id="@+id/gauge2"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp"
                                        android:padding="10dp"
                                        gauge:pointEndColor="@color/doughnut_wifi"
                                        gauge:pointStartColor="@color/doughnut_wifi"
                                        gauge:startAngel="135"
                                        gauge:startValue="0"
                                        gauge:endValue="100"
                                        gauge:strokeCap="ROUND"
                                        gauge:strokeWidth="10dp"
                                        gauge:sweepAngel="270" />

                                    <TextView
                                        android:id="@+id/tvgauge2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/gauge2"
                                        android:layout_centerInParent="true"
                                        android:layout_marginBottom="48dp"
                                        android:text="0"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/ivgauge2"
                                        android:layout_width="27dp"
                                        android:layout_height="27dp"
                                        android:src="@mipmap/ic_symbology_traffic_upload"
                                        android:layout_alignBottom="@+id/gauge2"
                                        android:layout_marginBottom="20dp"
                                        android:layout_centerHorizontal="true" />
                                </RelativeLayout>

                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/sample_period"
                                android:textSize="10sp"
                                android:visibility="visible"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="DIA"
                                android:id="@+id/tv_daily_sample_period"
                                android:layout_marginLeft="@dimen/separation_little" />
                        </LinearLayout>
                    </LinearLayout>


                    <!-- Cuarta Fila -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/floatingBox">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_data_usage_white"
                            android:gravity="center"
                            style="@style/floatingBoxLabel"
                            android:text="@string/view_status_your_monthly_data_usage"/>

                        <ProgressBar
                            style="@style/CustomProgressBarHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pb_mobile_data_consumption"
                            android:progress="50"
                            android:max="100"
                            android:indeterminate="false"
                            android:layout_margin="@dimen/activity_vertical_margin" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/sample_period"
                                android:textSize="10sp"
                                android:visibility="visible"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="MES"
                                android:id="@+id/tv_monthly_sample_period"
                                android:layout_marginLeft="@dimen/separation_little" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>

        </FrameLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>