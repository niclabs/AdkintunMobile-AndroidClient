<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cl.niclabs.adkintunmobile.views.activemeasurements.ActiveMeasurementsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TableRow
                android:id="@+id/webView_tableRow"
                android:layout_width="0dp"
                android:layout_height="200dp">
            <WebView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:id="@+id/webView" />" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="200dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/urls" />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="3"/>

                <TableLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Descarga:"
                            android:layout_weight="1"
                            android:id="@+id/textView" />
                    </TableRow>


                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="velocidad"
                            android:id="@+id/downloadTransferRate"
                            android:layout_weight="2"
                            android:gravity="right" />

                        <TextView
                            android:layout_width="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="kbps"
                            android:id="@+id/textView2"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp" />
                    </TableRow>
                </TableLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="3"/>

                <TableLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:stretchColumns="*" >

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Carga:"
                            android:layout_weight="1"
                            android:id="@+id/textView4" />
                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="velocidad"
                            android:id="@+id/uploadTransferRate"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="kbps"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content" />
                    </TableRow>
                </TableLayout>
            </TableRow>


            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/server_url"/>
                    <TableRow>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="1"
                            android:imeOptions="actionSend"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="MB"
                            android:id="@+id/textV5iew9"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content" />
                    </TableRow>

                </TableLayout>


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="START"
                    android:id="@+id/button"
                    android:onClick="onClickStart"
                    android:visibility="visible"
                    android:layout_alignRight="@+id/graph1"
                    android:layout_alignEnd="@+id/graph1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:layout_above="@+id/percent"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
