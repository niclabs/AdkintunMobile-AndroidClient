<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.niclabs.adkintunmobile.views.networktype.NetworkTypeFragment">

    <RelativeLayout
        android:id="@+id/loading_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorLoadingPane">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleLarge" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/abc_edit_text_inset_top_material">

                <ImageView
                    android:id="@+id/image_clock"
                    android:layout_width="@dimen/connected_time_clock"
                    android:layout_height="@dimen/connected_time_clock"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="visible"
                    android:background="@drawable/connected_time_clock"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <cl.niclabs.adkintunmobile.utils.display.DoughnutChart
                    android:id="@+id/doughnut"
                    android:layout_width="@dimen/connected_time_doughnut"
                    android:layout_height="@dimen/connected_time_doughnut"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="visible"
                    android:rotation="180"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/abc_dialog_padding_top_material">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/floatingBox"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_connection_type_symbology"
                        style="@style/labelsFloatingBox"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

